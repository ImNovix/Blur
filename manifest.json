{
  "manifest_version": 3,
  "name": "Blur",
  "description": "Blur What You Want",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.roblox.com/*"],
      "js": ["src/injecter.js"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "https://*.roblox.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/**/*.js",
        "src/images/*.png",
        "src/pages/css/*.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}